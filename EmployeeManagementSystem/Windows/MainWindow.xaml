<Window x:Class="EmployeeManagementSystem.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagementSystem.Windows"
        mc:Ignorable="d"
        Title="Employee Management Dashboard" Height="1000" Width="1500"
        WindowStartupLocation="CenterScreen"
        Background="#F4F4F4"
        FlowDirection="LeftToRight"
        Icon="/Images/App.png">

    <!-- Styles and Effects -->
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowEffect x:Key="DropShadowEffect" Color="Gray" Direction="320" ShadowDepth="4" Opacity="0.4" BlurRadius="10"/>
    </Window.Resources>

    <Grid>
        <!-- Sidebar -->
        <DockPanel Width="200" Background="#2E2E2E" HorizontalAlignment="Left">
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="App Menu" FontSize="20" Foreground="White" FontWeight="Bold" Margin="10,0,0,20"/>
                <Button Style="{StaticResource NavButtonStyle}" Name="EmployeeList" Click="EmployeeList_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👥" Margin="0,0,10,10"/>
                        <TextBlock Text="Employees"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource NavButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="➕" Margin="0,0,10,10"/>
                        <TextBlock Text="Add Employee"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource NavButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊" Margin="0,0,10,10"/>
                        <TextBlock Text="Reports"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource NavButtonStyle}" Command="{Binding LogoutCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🚪" Margin="0,0,10,10"/>
                        <TextBlock Text="Logout"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Main Content -->
        <Grid Margin="200,0,0,0">
            <!-- Top Bar -->
            <DockPanel Height="60" Background="#8E2DE2" VerticalAlignment="Top">
                <TextBlock Text="Employee Management Dashboard" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20,0,0,0" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <TextBlock Text="Hello, Admin" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="🕒" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </DockPanel>

            <!-- Content -->
            <StackPanel Orientation="Vertical" Margin="20,80,20,20">
                <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Border Background="White" Width="200" Height="100" CornerRadius="10" Margin="10" Padding="10" Effect="{DynamicResource DropShadowEffect}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Total Employees" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding AllEmployeeCount}" Name="TotalEmployees" FontSize="28" Foreground="#8E2DE2" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" Width="200" Height="100" CornerRadius="10" Margin="10" Padding="10" Effect="{DynamicResource DropShadowEffect}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Active Employees" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding ActiveEmployeeCount}" FontSize="28" Foreground="#4CAF50" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <Button Content="Manage Employees" Width="180" Height="45" Background="#8E2DE2" Foreground="White" FontSize="16" FontWeight="Bold" BorderThickness="0" HorizontalAlignment="Center" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
