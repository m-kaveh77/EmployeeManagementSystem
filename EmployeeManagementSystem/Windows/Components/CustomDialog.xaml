<Window x:Class="EmployeeManagementSystem.Windows.Components.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagementSystem.Windows.Components"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        Width="400" 
        Height="220"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ShowInTaskbar="False">

    <Border Background="White" BorderBrush="#8E2DE2" BorderThickness="3">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">
                <TextBlock Name="IconType"
                   FontFamily="Segoe MDL2 Assets"
                   FontSize="36"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10">
                </TextBlock>

                <TextBlock Name="MessageText"
                   TextWrapping="Wrap"
                   FontSize="16"
                   Foreground="#444"
                   TextAlignment="Center"
                   Margin="10">
                </TextBlock>
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom" Name="ButtonType" Orientation="Horizontal" HorizontalAlignment="Center" Margin="30"></StackPanel>
        </DockPanel>
    </Border>
</Window>
